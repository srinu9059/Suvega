<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Semi-transparent background to dim the map -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Arrow pointing towards the flag icon -->

    <!-- Text explaining the feature -->
    <ImageView
        android:id="@+id/arrowImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/noun_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrowImage"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="Click Here to \n see More Events"
        android:textColor="#FFFFFF" />
</RelativeLayout>
